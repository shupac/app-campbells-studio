h2#title
    position fixed
    width 100%
    text-align center
    color rgba(255,255,255,0.87)
    z-index 5
    font-family: Roboto,Helvetica Neue,sans-serif
    font-weight 400
    pointer-events none

    @media (min-width: 655px) and (max-width: 960px)
        top -10px

    @media (min-width: 400px) and (max-width: 655px)
        top -5px

    @media (max-width: 400px)
        font-size 16px
        top 6px

md-toolbar#register
    position fixed

.register-container
    max-width 800px
    margin 0 auto
    text-align left
    padding 40px 0


.heading-container
    text-align center
    margin-bottom 20px

input, md-select span
    color black !important

.editable input, .editable md-select span
    color blue !important

md-input-container
    margin 0

fieldset
    margin 0
    padding 0

#register .edit-buttons
    margin-top 30px
    text-align right

#confidentiality
    position relative
    top -15px

.mailing-description
    color rgba(0,0,0,0.38)
